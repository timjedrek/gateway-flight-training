          <!--button-->  
          <div class="flex flex-row justify-between items-start">
            <%= link_to "#", class: "px-3 w-full m-3 mt-5 rounded-md text-center text-white font-semibold bg-yellow-500 transition-all duration-300 hover:bg-yellow-400 " do %>
                Enroll Now!
            <% end %>
          </div>
        </div>
      <% end %>

      <!--Step 3-->
      <%= link_to "#" do %>
        <div class="flex flex-col justify-between bg-white drop-shadow-xl rounded-xl p-0 mx-5 mb-5 lg:w-1/3"> 
          <!--Picture-->
          <div class="">
