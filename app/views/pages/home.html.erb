    <h2 class="font-bold text-center text-3xl pb-10 px-5">
      First Time Here? Here's How to Become a Pilot
    </h2>
    <!--Three Steps-->
    <div class="flex flex-col lg:flex-row lg:justify-center">
      <!--Step 1-->
      <%= link_to "#" do %>
        <div class="flex flex-col justify-between bg-white drop-shadow-xl rounded-xl p-0 mx-5 mb-5 lg:w-1/3"> 
          <!--Picture-->
          <div class="">
              <%= image_tag "archpic.webp", class: "object-cover w-full rounded-t-xl lg:h-72" %>
          </div>
          <!--Step-->
          <div class="px-3">
            <strong class="block font-bold my-1 text-2xl text-center text-red-800">
                1. Schedule a Discovery Flight
            </strong>
          </div>
          <!--Step Text-->
          <div class="px-3 text-center">
            Take the controls of the aircraft for the first time as your instructor guides you through the flight.
          </div>
          <!--button-->  
          <div class="flex flex-row justify-between items-start">
            <%= link_to "#", class: "px-3 w-full m-3 mt-5 rounded-md text-center text-white font-semibold bg-yellow-500 transition-all duration-300 hover:bg-yellow-400 " do %>
                Book Now!
            <% end %>
          </div>
        </div>
      <% end %>

      <!--Step 2-->
      <%= link_to "#" do %>
        <div class="flex flex-col justify-between bg-white drop-shadow-xl rounded-xl p-0 mx-5 mb-5 lg:w-1/3"> 
          <!--Picture-->
          <div class="">
              <%= image_tag "groundschool.webp", class: "object-cover w-full rounded-t-xl lg:h-72" %>
          </div>
          <!--Step-->
          <div class="px-3">
            <strong class="block font-bold my-1 text-2xl text-center text-red-800">
                2. Enroll in Ground School.
            </strong>
          </div>
